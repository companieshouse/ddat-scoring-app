<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DDAT Scoring</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">
  </head>
  <body>
  <section class="section">
    <div class="container">
      <hr>
      <div class="columns">
        <div class="column">
          <p class="subtitle">DDaT Performance Review</p>
        </div>
        <div class="column has-text-right">
          <p class="subtitle"><%= admin.name %> / <%= admin.role %></p>
        </div>
      </div> 
      <hr>

<div class="columns">

<div class="column is-one-third">
<%- include('./partials/menu'); %>
</div>

<div class="column">

  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4"><%= desc.title %></p>
        </div>
      </div>
      <div class="content">
        <ul>
          <% desc.description.forEach(function(item) {%>
            <% if (item.startsWith( '+')) { %>
              </ul>
              <h6 class="title"><%= item.slice(1) %></h6>
              <ul>
            <% } else { %>
              <li><%= item %></li>
            <% } %>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>


  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4">Assessement</p>
<span class="tag is-light">Developing 1.0 - 3.9</span>
<span class="tag is-light">Proficient 4.0 - 6.9</span>
<span class="tag is-light">Accomplished 7.0 - 8.0</span>
        </div>
      </div>
<form method="post" action="">
      <div class="content">

        <div class="field">
          <label class="label">Score</label>
          <div class="control">
            <% if (score.score == '0') { %>
            <input class="input is-danger" name="score" type="text" placeholder="5" value="<%= score.score %>">
            <% } else { %>
            <input class="input" name="score" type="text" placeholder="5" value="<%= score.score %>">
            <% }; %>
          </div>
          <% if (score.score == '0') { %>
            <p class="help is-danger">Please enter a valid score from 0 to 8.</p>
          <% }; %>
        </div>

        <div class="field">
          <label class="label">Evidence</label>
          <div class="control">
            <% if (score.evidence == '') { %>
            <textarea class="textarea is-danger" name="evidence" placeholder="Enter evidence of skill here."><%= score.evidence %></textarea>
            <% } else { %>
            <textarea class="textarea" name="evidence" placeholder="Enter evidence of skill here."><%= score.evidence %></textarea>
            <% }; %>
          <% if (score.evidence == '') { %>
            <p class="help is-danger">Please enter evidence for your score.</p>
          <% }; %>
          </div>
        </div>
      </div>

      <div class="field is-grouped is-grouped-right">
        <p class="control">
          <button class="button">
            Submit
          </button>
        </p>
      </div>
</form>
    </div>
  </div>

  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4">Suggested Sources of Evidence</p>
        </div>
      </div>
      <div class="content">
        <ul>
          <% desc.evidence.forEach(function(item) {%>
            <li><%= item %></li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>

</div>

</div>  

    </div>
  </section>
  </body>
</html>

