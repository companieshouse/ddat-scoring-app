<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DDAT Scoring</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">
  </head>
  <body>
  <section class="section">
    <div class="container">
      <hr>
      <p class="subtitle">DDaT Performance Review</p>
      <hr>

      <% if (summary.warning != '') { %>
        <div class="notification is-danger">
        <%= summary.warning %>
        </div>
      <% }; %>

      <div class="columns">
        <div class="column is-10">
          <div class="fixed-grid has-8-cols">
            <div class="grid">
              <div class="cell is-col-span-2">Name</div>
              <div class="cell is-col-span-2"><%= admin.name %></div>
              <div class="cell is-col-span-4"></div>
              <div class="cell is-col-span-2">Role</div>
              <div class="cell is-col-span-2"><%= admin.role %></div>
              <div class="cell is-col-span-4"></div>
              <div class="cell is-col-span-2">Grade</div>
              <div class="cell is-col-span-2"><%= admin.grade %></div>
              <div class="cell is-col-span-4"></div>
              <div class="cell is-col-span-2">Current Capability Level</div>
              <div class="cell is-col-span-2"><%= admin.capability %></div>
              <div class="cell is-col-span-4"></div>
              <div class="cell is-col-span-2">Date of Review</div>
              <div class="cell is-col-span-2"><%= admin.date %></div>
              <div class="cell is-col-span-4"></div>
            </div>
          </div>
        </div>
        <div class="column">
<span class="tag is-light">Developing 1.0 - 3.9</span><br>
<span class="tag is-light">Proficient 4.0 - 6.9</span><br>
<span class="tag is-light">Accomplished 7.0 - 8.0</span>
        </div>
      </div>

      <hr>
      <nav class="level">
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Total Capability Score</p>
            <p class="title"><%= summary.total %></p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Average Capability Score</p>
            <p class="title"><%= summary.average %></p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Final Proficiency Level</p>
            <p class="title"><%= summary.proficiency %></p>
          </div>
        </div>
      </nav>
      <hr>

      <h6 class="subtitle">Skills</h6>
      <hr>

      <div class="fixed-grid has-12-cols">
        <div class="grid">
          <div class="cell is-col-span-2">Skill</div>
          <div class="cell is-col-span-5">Description</div>
          <div class="cell is-col-span-4">Evidence</div>
          <div class="cell is-col-span-1">Score</div>

          <% report.forEach(function(item) {%>
            <% if (item.group == 'skill') { %>
              <div class="cell is-col-span-2">
                  <%= item.title %>
              </div>
              <div class="cell is-col-span-5">
                <div >
                  <ul>
                    <% item.description.forEach(function(it) {%>
                      <% if (it.startsWith( '+')) { %>
                        </ul><i>
                        <%= it.slice(1) %>
                        </i><ul>
                      <% } else { %>
                        <li><%= it %></li>
                      <% } %>
                    <% }); %>
                  </ul>
                </div>
              </div>
              <div class="cell is-col-span-4"><%= item.evidence %></div>
              <div class="cell is-col-span-1"><%= item.score %></div>
            <% }; %>
          <% }); %>
        </div>
      </div>

      <hr>
      <h6 class="subtitle">Behaviours</h6>
      <hr>
      <div class="fixed-grid has-12-cols">
        <div class="grid">
          <div class="cell is-col-span-2">Behaviour</div>
          <div class="cell is-col-span-5">Description</div>
          <div class="cell is-col-span-4">Evidence</div>
          <div class="cell is-col-span-1">Score</div>

          <% report.forEach(function(item) {%>
            <% if (item.group == 'behaviour') { %>
              <div class="cell is-col-span-2">
                  <%= item.title %>
              </div>
              <div class="cell is-col-span-5">
                <div >
                  <ul>
                    <% item.description.forEach(function(it) {%>
                      <% if (it.startsWith( '+')) { %>
                        </ul><i>
                        <%= it.slice(1) %>
                        </i><ul>
                      <% } else { %>
                        <li><%= it %></li>
                      <% } %>
                    <% }); %>
                  </ul>
                </div>
              </div>
              <div class="cell is-col-span-4"><%= item.evidence %></div>
              <div class="cell is-col-span-1"><%= item.score %></div>
            <% }; %>
          <% }); %>
        </div>
      </div>

    </div>
  </section>
  </body>
</html>

